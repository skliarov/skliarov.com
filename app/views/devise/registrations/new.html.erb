<div class="column column-600">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <% if !resource.errors.empty? %>
      <div>
        <%= devise_error_messages! %>
      </div>
    <% end %>

    <div>
      <%= f.email_field :email, :autofocus => true, :autocomplete => :off, :placeholder => "Email address" %>
    </div>

    <div>
      <%= f.text_field :username, :autocomplete => :off, :placeholder => "Username" %>
    </div>

    <div>
      <%= f.password_field :password, :autocomplete => :off, :placeholder => "Password" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, :autocomplete => :off, :placeholder => "Password confirmation" %>
    </div>

    <div>
      <%= f.submit "Sign up" %>
      <%= link_to "Cancel", root_path %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>