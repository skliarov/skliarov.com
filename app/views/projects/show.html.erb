<% content_for :head do %>
	<title>Consigliere - <%= @project.title %></title>
<% end %>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		
		<div class="page-header">
			<h1><%= @project.title %></h1>
		</div>

		<div class="content">
			<%= @project.body.html_safe %>
		</div>

		<div class="buttons">
			<% if can? :update, @project %>
				<%= link_to 'Edit', edit_project_path(@project), :class => "btn btn-primary" %>
			<% end %>

			<% if can? :destroy, @project %>
				<%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
			<% end %>

			<%= link_to 'Back', projects_path, :class => "btn btn-default" %>
		</div>
			
	</div>
</div>